.checkbox
	&
		padding-bottom 40px

	&__subtitle
		margin-bottom 25px

	&__container
		display flex

	&__list
		margin-right 40px

		&:nth-child(2)
			margin-right 43px

		&:last-child
			margin-right 0

	&__item
		margin-bottom 10px

	&__label
		display block
		font-size 21px
		font-weight 700
		line-height 1.2
		color #000

		& > a
			display inline-block
			border-bottom 1px solid #1f5f97

			line-height 1.1
			text-decoration none
			color #1f5f97

			&:hover
				border none

	&__input
		position absolute
		left -9999px

	&__input + label
		position relative
		padding-left 27px

	&__input + label:before
		position absolute
		content ''

		top 6px
		left 0

		sprite $checkbox

	&__input:checked + label:after
		position absolute
		content ''

		top 10px
		left 4px

		sprite $checkbox_active
