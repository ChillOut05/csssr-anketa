.data
	&
		display block

		padding-bottom 37px

		font-size 22px
		font-weight 700
		line-height 2.3

	&__item
		display flex

		margin-bottom 11px

	&__label
		margin-right 15px

		color $title

		white-space nowrap

	&__input-container
		position relative
		width 100%
		height 40px

		overflow hidden

		&:before
			position absolute
			bottom 2px

			content ''

			background-repeat no-repeat
			sprite ($line)

	&__input
		display block
		width 100%

		margin-top -5px
		padding-left 18px

		border none

		background-color transparent

		font-family $courier
		font-size 30px
		font-weight 400
		color #231f20

@media (max-width 900px)
	.data
		&
			font-size 18px

		&__input
			margin-top 0
			padding-left 0

			font-size 20px

			&-container
				height 36px

		&__item
			flex-direction column
