.slider
	&
		padding-bottom 100px

	&__range
		position relative

		sprite $line

	&__title
		margin-bottom 30px

	&__steps
		position relative

	&__pip
		position absolute

		&:last-child
			white-space nowrap
			direction rtl

		&:last-child > .slider__line
			margin-bottom 12px

	&__line
		&
			position relative

			top 1px
			left -1px

			margin-bottom 7px

			sprite $slider_pip

		&_small
			height 12px
			margin-bottom 19px

	&__label
		max-width 170px
		font-size 13px
		font-weight bold
		color $title

.ui-slider-handle
	position absolute
	top -17px
	margin-left -7px

	sprite $arrow
