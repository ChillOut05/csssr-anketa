.slider
	&
		padding-bottom 83px

	&__range
		&
			position relative

			sprite ($line)

			width auto
			max-width 768px

		& > .ui-slider-handle
			position absolute
			top -17px
			margin-left -7px

			cursor pointer

			sprite ($arrow)

		&_desktop
			display block

	&__title
		margin-bottom 30px

	&__steps
		position relative

	&__pip
		position absolute

		&:last-child > .slider__line
			right 0
			left auto

		&:last-child > .slider__label
			margin-top 40px

	&__line
		&
			position absolute

			top 1px
			left -1px

			margin-bottom 4px

			sprite ($slider_pip)

		&_small
			margin-bottom 16px
			height 12px

	&__label
		max-width 170px

		margin-top 30px

		font-size 13px
		font-weight bold
		line-height 1.5
		color $title

		&:hover
			cursor pointer

	&__range_mobile
		&
			display none

			sprite ($line_vertical)

			height 300px

		&
			.ui-slider-handle
				top auto
				left -20px
				transform: rotate(145deg)

		&
			.slider__steps
				position static

		&
			.slider__line
				top auto

				transform rotate(90deg)

				&_small
					left -4px

		&
			.slider__pip
				left 12px

				&:first-child .slider__label
					margin-top 6px

				&:last-child .slider__label
					margin-bottom -19px

				&:last-child > .slider__line
					right auto

		&
			.slider__label
				width 170px

				margin-top 0
				margin-left 30px

@media (max-width 900px)
	.slider
		&__label
			max-width 140px

@media (max-width 560px)
	.slider
		&
			padding-bottom 40px

		&__range_desktop
			display none

		&__range_mobile
			display block

			margin-left 6%
